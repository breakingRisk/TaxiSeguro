<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.magdiel.taxiseguro.Perfil"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/img15"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jess Jaime"
        android:id="@+id/nombre"
        android:textSize="20dp"
        android:layout_below="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="+5511434964"
        android:id="@+id/telefono"
        android:layout_below="@+id/nombre"
        android:layout_alignLeft="@+id/correo"
        android:layout_alignStart="@+id/correo"
        android:layout_marginTop="58dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="catostylus05@gmail.com"
        android:id="@+id/correo"
        android:layout_below="@+id/telefono"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/speaker"
        android:layout_alignBottom="@+id/correo"
        android:layout_toLeftOf="@+id/telefono"
        android:layout_alignTop="@+id/correo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/telefono"
        android:layout_toLeftOf="@+id/telefono"
        android:layout_toStartOf="@+id/telefono"
        android:src="@drawable/mail"
        android:layout_alignTop="@+id/telefono" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/nombre"
        android:layout_toLeftOf="@+id/telefono"
        android:layout_toStartOf="@+id/telefono"
        android:src="@drawable/user"
        android:layout_alignTop="@+id/nombre" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/account"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:id="@+id/modificar"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:id="@+id/regresar"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignTop="@+id/modificar"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        android:textSize="18dp" />


</RelativeLayout>
