<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.magdiel.taxiseguro.Perfil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jess Jaime"
        android:id="@+id/nombre"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="+5511434964"
        android:id="@+id/telefono"
        android:layout_below="@+id/nombre"
        android:layout_alignLeft="@+id/correo"
        android:layout_alignStart="@+id/correo"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="catostylus05@gmail.com"
        android:id="@+id/correo"
        android:layout_below="@+id/telefono"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/speaker"
        android:layout_alignBottom="@+id/correo"
        android:layout_toLeftOf="@+id/telefono"
        android:layout_alignTop="@+id/correo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/telefono"
        android:layout_toLeftOf="@+id/telefono"
        android:layout_toStartOf="@+id/telefono"
        android:src="@drawable/mail"
        android:layout_alignTop="@+id/telefono" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignBottom="@+id/nombre"
        android:layout_toLeftOf="@+id/telefono"
        android:layout_toStartOf="@+id/telefono"
        android:src="@drawable/user"
        android:layout_alignTop="@+id/nombre" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/account"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:id="@+id/modificar"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:id="@+id/regresar"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignTop="@+id/modificar"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4" />


</RelativeLayout>
