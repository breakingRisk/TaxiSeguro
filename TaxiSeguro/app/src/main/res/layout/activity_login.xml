        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="140dp"
        >


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
